<!DOCTYPE html>
<html lang="en-gb">
  <%= partial "head" %>
  <body>
    <%= partial "navbar" %>
    <main class="container body-content">
        <div class="jumbotron">
            <h1><%= current_page.data.title %></h1>
            <p class="lead"><%= current_page.data.description %></p>
        </div>
        <p>
            <div class="row d-none d-md-block">
                <div class="col-6">
                    <%= current_page.data.date.strftime('%e %B %Y') %> by <a href="/about-me/" rel="noopener" title="About <%= blog_author %>"><%= blog_author %></a> |
                    <a href="/feed.xml" rel="noopener" title="View the RSS syndication feed"><em class="fas fa-rss"></em></a>
                </div>
            </div>
            <div class="row d-md-none">
                <div class="col-12">
                    <%= current_page.data.date.strftime('%e %B %Y') %> by <a href="/about-me/" rel="noopener" title="About <%= blog_author %>"><%= blog_author %></a>
                </div>
                <div class="col-12">
                    <a href="/feed.xml" rel="noopener" title="View the RSS syndication feed"><em class="fas fa-rss"></em></a></p>
                </div>
            </div>
        </p>
        <%= partial "social" %>
        <%= yield %>
        <hr />
        <%= partial "social" %>
        <hr />
        <%= partial "footer" %>
    </main>
    <%= partial "aside" %>
    <%= partial "css" %>
    <%= partial "scripts" %>
  </body>
</html>
