<!DOCTYPE html>
<html lang="en-gb">
  <%= partial "head" %>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand"><%= site_domain %></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/about-me/">About Me</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <% if current_page.data.showTitle %>
            <h1><%= current_page.data.title %></h1>
            <p><%= current_page.data.date.strftime('%e %B %Y') %> by <a href="/about-me/" alt="<%= blog_author %>" title="<%= blog_author %>"><%= blog_author %></a></p>
        <% end %>
        <%= yield %>
        <hr />
        <%= partial "footer" %>
    </div>
    <%= partial "aside" %>
    <%=
        javascript_include_tag "jquery-2.1.4.min",
                               "respond.min",
                               "bootstrap.min"
    %>
    <%= partial "analytics" %>
    </body>
</html>
