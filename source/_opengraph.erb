<meta property="og:description" content="<%= current_page.data.description || current_page.data.title || blog_title %>" />
<%
if current_page.data.image
  og_image = URI.join(site_root_uri, image_path(current_page.data.image))
else
  og_image = "https://" + cdn_domain + "/martin_small-v2.png"
end
%>
<meta property="og:image" content="<%= og_image %>" />
<meta property="og:locale" content="en_GB" />
<meta property="og:site_name" content="<%= blog_title %>" />
<meta property="og:title" content="<%= current_page.data.title || blog_title %>" />
<meta property="og:type" content="article" />
<meta property="og:updated_time" content="<%= File.mtime(current_page.source_file).iso8601 %>" />
<meta property="og:url" content="<%= URI.join(site_root_uri, current_page.url) %>" />
