<meta name="twitter:card" content="summary" />
<meta name="twitter:creator" content="@<%= config[:twitter_handle] %>" />
<meta name="twitter:description" content="<%= current_page.data.description || current_page.data.title || config[:blog_title] %>" />
<meta name="twitter:domain" content="<%= config[:site_domain] %>" />
<%
if current_page.data.image
  twitter_image = URI.join(config[:site_root_uri], image_path(current_page.data.image))
else
  twitter_image = "https://" + config[:cdn_domain] + "/martin_small-v3.png"
end
%>
<meta name="twitter:image" content="<%= twitter_image %>" />
<meta name="twitter:image:alt" content="<%= current_page.data.image_alt_text || "Martin Costello" %>" />
<meta name="twitter:site" content="@<%= config[:twitter_handle] %>" />
<meta name="twitter:title" content="<%= current_page.data.title || config[:blog_title] %>" />
<meta name="twitter:url" content="<%= URI.join(config[:site_root_uri], current_page.url) %>" />
<meta name="twitter:label1" content="Written by" />
<meta name="twitter:data1" content="Martin Costello" />
