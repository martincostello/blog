---
title: Martin Costello's Blog
description: "The blog of a software developer and tester based in London."
---

<div class="jumbotron">
    <h1><%= blog_title %></h1>
    <p class="lead"><%= blog_subtitle %></p>
</div>
<% blog.articles[0..9].each do |article| %>
<div class="row">
    <div class="col-md-12">
        <h2><%= link_to article.title, article %></h2>
        <p>
            <div class="row hidden-xs hidden-sm">
                <div class="col-md-6 col-lg-6">
                    <%= article.date.strftime('%e %B %Y') %> by <a href="/about-me/" alt="<%= blog_author %>" rel="noopener" title="<%= blog_author %>"><%= blog_author %></a> |
                    <a href="/feed.xml" rel="noopener"><em class="fa fa-rss"></em></a>
                </div>
            </div>
            <div class="row hidden-md hidden-lg">
                <div class="col-xs-12 col-sm-12">
                    <%= article.date.strftime('%e %B %Y') %> by <a href="/about-me/" alt="<%= blog_author %>" rel="noopener" title="<%= blog_author %>"><%= blog_author %></a>
                </div>
                <div class="col-sm-12 col-xs-12">
                    <a href="/feed.xml" rel="noopener"><em class="fa fa-rss"></em></a></p>
                </div>
            </div>
        </p>
        <p><%= article.summary %></p>
        <p><a href="<%= article.url %>" alt="Read more" rel="noopener" title="Read more">Read more...</a></p>
    </div>
</div>
<% end %>
