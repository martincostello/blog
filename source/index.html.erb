---
title: Martin Costello's Blog
description: "The blog of a software developer and tester based near London."
---

<div class="p-4 mb-3 bg-light rounded-3">
    <div class="container-fluid py-3">
        <h1 class="display-5"><%= config[:blog_title] %></h1>
        <p class="col-md-8 fs-4 lead">
            <span class="fa-solid fa-laptop-code" aria-hidden="true"></span>
            <%= config[:blog_subtitle] %>
        </p>
    </div>
</div>
<% blog.articles[0..9].each do |article| %>
<div class="row">
    <div class="col">
        <h2 class="display-4"><%= link_to article.title, article %></h2>
        <p>
            <div class="row d-none d-md-block">
                <div class="col-lg-6">
                    <%= article.date.strftime('%e %B %Y') %> by&nbsp;<a href="/about-me/" rel="noopener" title="About <%= config[:blog_author] %>"><%= config[:blog_author] %></a> |
                    <a href="/feed.xml" rel="noopener" title="View the RSS syndication feed"><span class="fa-solid fa-rss" aria-hidden="true"></span></a>
                </div>
            </div>
            <div class="row d-md-none">
                <div class="col-xs-12 col-sm-12">
                    <%= article.date.strftime('%e %B %Y') %> by&nbsp;<a href="/about-me/" rel="noopener" title="About <%= config[:blog_author] %>"><%= config[:blog_author] %></a>
                </div>
                <div class="col-sm-12 col-xs-12">
                    <a href="/feed.xml" rel="noopener" title="View the RSS syndication feed"><span class="fa-solid fa-rss" aria-hidden="true"></span></a></p>
                </div>
            </div>
        </p>
        <p><%= article.summary %></p>
        <p><a href="<%= article.url %>" alt="Read more" rel="noopener" title="Read more of this post">Read more...</a></p>
    </div>
</div>
<% end %>
